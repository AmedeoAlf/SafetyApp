<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Creare un foregroundService è necessario a far partire un'attività dal background-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <!-- NOTA: In alternativa si potrebbe usare https://developer.android.com/develop/background-work/services/fgs/service-types#system-exempted -->

    <!-- Per creare un foregroundService è necessario poter creare notifiche -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Per qualche motivo serve anche SYSTEM_ALTERT_WINDOW -->
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <!-- Prima o poi bisogna fare richieste https://developer.android.com/develop/connectivity/network-ops/connecting-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SafetyApp"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".EmergencyPopup"
            android:exported="false"
            android:label="@string/title_activity_emergency_popup"
            android:theme="@style/Theme.SafetyApp" />

        <!--            Cheap solution pt. 2-->
        <service
            android:name=".Background"
            android:enabled="true"
            android:exported="false"
            android:foregroundServiceType="specialUse" />

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.SafetyApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>